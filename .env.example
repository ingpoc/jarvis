# Jarvis Remote Access Configuration
# Copy to .env and customize for your setup

# ============================================================================
# REMOTE SERVER SETTINGS
# ============================================================================

# Enable remote WSS server (0.0.0.0:9848)
JARVIS_REMOTE_ENABLED=false

# Remote server bind address (use 0.0.0.0 for external access)
JARVIS_REMOTE_BIND=0.0.0.0

# Remote server port (must be different from local WS server on 9847)
JARVIS_REMOTE_PORT=9848

# REST API port for device pairing
JARVIS_REST_PORT=9849

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT secret key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JARVIS_JWT_SECRET=change-me-in-production

# JWT token expiry in seconds (default: 86400 = 24 hours)
JARVIS_JWT_EXPIRY=86400

# ============================================================================
# DEVICE MANAGEMENT
# ============================================================================

# Maximum number of registered devices
MAX_DEVICES=10

# Device registration expiry in days
DEVICE_EXPIRY_DAYS=365

# ============================================================================
# TAILSCALE INTEGRATION
# ============================================================================

# Enable Tailscale funnel for remote access
TAILSCALE_ENABLED=false

# Tailscale funnel port (usually same as JARVIS_REMOTE_PORT)
TAILSCALE_FUNNEL_PORT=9848

# ============================================================================
# LOCAL WEBHOOKS (OPTIONAL)
# ============================================================================

# Webhook URL for connection events
JARVIS_WEBHOOK_URL=

# Webhook secret for signature verification
JARVIS_WEBHOOK_SECRET=
